generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int     @id @default(autoincrement())
  name      String
  completed Boolean @default(false)
  listId    String

  list TaskList @relation(fields: [listId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model TaskList {
  id    String @id @default(uuid())
  name  String
  tasks Task[]
}
